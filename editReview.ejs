<% layout("./layouts/boilerplate") -%>

<div class="card mb-3" >
    <div class="row g-0">
      <div class="col-sm-12 col-md-6 col-lg-3 my-2" > <img src="<%=review.show.imageUrl%>"> </div>
      <div class="col-sm-12 col-md-6 col-lg-9">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 col-lg-9">
                        <h3 class="card-title mb-3"><%=review.show.showName%></h3>
                    </div>
                </div>
                <p class="card-text"> Mudou de ideia? Compartilhe sua nova opiniÃ£o!</p>
                <form action="/shows/<%=review.show._id%>/review/<%=review._id%>?_method=PUT" method="POST">
                        <div class=" mt-3" id="">
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked
                                    aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input  type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        
                            <textarea class="form-control" name="review[reviewText]" id="reviewText"cols="30" rows="3"><%=review.reviewText%></textarea>
                        </div> 
                        <button class="btn btn-success mt-2">Salvar!</button>
                </form>    
            </div>             
        </div>
      </div>
</div>

