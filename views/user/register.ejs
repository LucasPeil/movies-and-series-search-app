<%layout("./layouts/boilerplate") -%>
 
 <div class="container">
    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3 d-flex flex-column">
          <h1>Registre-se</h1>
          <form  action="/user/register" method="POST">
            <div class="mb-3">
                <label class="form-label" for="username">Username:</label>
                <input class="form-control" type="text" id="username" name="user[username]" placeholder="Enter your username">
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email:</label>
                <input class="form-control" type="email" id="email" name="user[email]" placeholder="Enter your email:">
            </div >
            <div class="mb-3">
                <label class="form-label" for="password">Password:</label>
                <input  class="form-control" type="password" id="password" name="user[password]" placeholder="Enter your password">
            </div >
            <div class="col-sm-12 col-lg-6 offset-lg-3">
                <button class=" btn btn-success w-100">Entrar</button>
            </div>
           
         </form>
            <div id ="showsBox"></div>
        </div>
    </div>
</div>